<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.swx.mapper.CurriculumMapper">
    <update id="update">
        update curriculum
        <set>
            <if test="id != null ">
                id = #{id},
            </if>
            <if test="name != null and name !=''">
                name = #{name},
            </if>
            <if test="credit != null ">
                credit = #{credit},
            </if>
        </set>
        where id = #{id};
    </update>
</mapper>